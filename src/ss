{
                    waitForPlayersMtx_.lock();
                    (*playerCounter_)++;

                    if(*playerCounter_==4){
                        human->setColor(RED);
                        logger_->info(human->getName() + " rozpoczyna mecz");
                        match();

                        human->setColor(WHITE);
                        waitForPlayersMtx_.unlock();
                    } else {
                        waitForPlayersMtx_.unlock();
                        while (!(started_))
                            conditionVariableMatch_.wait(unique_lock);

                        human->setColor(RED);
                        conditionVariableMatch_.wait(unique_lock);
                        human->setColor(WHITE);

                    }
                }